{
  "name": "pintswap-staking",
  "version": "0.1.0",
  "description": "PINT contracts",
  "main": "index.js",
  "repository": "https://github.com/pintswap/pintswap-staking",
  "author": "pintswap <dev@pintswap.exchange>",
  "scripts": {
    "prettier": "prettier --plugin=prettier-plugin-solidity --write ./src/**/*.sol ./src/*.sol",
    "setup-node": "DEPLOYMENT_CONTEXT=localhost forge script script/Deployer.s.sol --fork-url http://localhost:8545 --broadcast -vvv",
    "cleanup": "rm -rf deployments/localhost",
    "node:ethereum": "cleanup && anvil -f mainnet",
    "gen-types": "typechain --target=ethers-v6 \"./out/**/*.json\"",
    "build": "forge build && yarn gen-types"
  },
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.0",
    "forge-deploy": "^0.2.0",
    "prettier": "^3.0.2",
    "prettier-plugin-solidity": "^1.1.3",
    "typechain": "^8.3.1"
  },
  "prettier": {
    "plugins": ["prettier-plugin-solidity"],
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "parser": "solidity-parse",
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false
        }
      }
    ]
  }
}
